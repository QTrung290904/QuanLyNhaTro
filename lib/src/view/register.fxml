<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterController">
    <children>
        <VBox spacing="10" layoutX="100" layoutY="80">
            <TextField fx:id="usernameField" promptText="Tên đăng nhập" />
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" />
            <TextField fx:id="fullNameField" promptText="Họ tên" />
            <ComboBox fx:id="roleCombo" promptText="Vai trò" />
            <Button text="Đăng ký" onAction="#handleRegister" />
            <Hyperlink text="Đã có tài khoản? Đăng nhập" onAction="#goToLogin" />
            <Label fx:id="messageLabel" textFill="red" />
        </VBox>
    </children>
</AnchorPane>
